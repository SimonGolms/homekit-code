{
  "name": "homekit-code",
  "version": "1.2.12",
  "description": "Generate a pairing HomeKit QR code label or scannable tag to setup your HomeKit accessory.",
  "keywords": [
    "apple",
    "code",
    "esp8266",
    "esp32",
    "homebridge",
    "homekit",
    "homekit-accessory",
    "label",
    "pairing",
    "qrcode",
    "tag"
  ],
